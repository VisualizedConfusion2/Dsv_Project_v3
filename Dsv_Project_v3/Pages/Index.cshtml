@page
@model IndexModel
@{
    ViewData["Title"] = "";
}
<div class="container mt-5">
    <h1 class="text-center">Velkommen til DSV Mødelokale Booking</h1>
    <p class="text-center">Book og administrer dine mødelokaler hurtigt og nemt.</p>

    <h2 class="mt-5">Tilgængelige Mødelokaler</h2>

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Navn</th>
                <th>Kapacitet</th>
                <th>Udstyr</th>
                <th>Etage</th>
                <th>Status</th>
                <th>Handling</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var meetingRoom in Model.MeetingRooms)
            {
                <tr>
                    <td>@meetingRoom.Name</td>
                    <td>@meetingRoom.Capacity</td>
                    <td>@meetingRoom.Whiteboard</td>
                    <td>@meetingRoom.SmartBoard</td>
                    <td>@(meetingRoom.IsAvailable ? "Ledig" : "Optaget")</td>
                    <td>
                        @if (meetingRoom.IsAvailable)
                        {
                            <a class="btn" style="background-color: darkblue; color: white;" asp-page="/Booking" asp-route-roomName="@meetingRoom.Name">Book</a>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>Optaget</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
 